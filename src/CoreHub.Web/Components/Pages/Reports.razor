@page "/reports"
@using CoreHub.Application.DTOs

<PageTitle>Reports - CoreHub</PageTitle>

<div class="reports-page">
    <h1 class="mb-4">Reports & Analytics</h1>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Report Filters</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" @bind="startDate" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-control" @bind="endDate" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Program</label>
                            <select class="form-select" @bind="selectedProgram">
                                <option value="">All Programs</option>
                                @foreach (var program in programs)
                                {
                                    <option value="@program.Id">@program.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <button class="btn btn-primary w-100" @onclick="LoadReport">
                                <i class="fas fa-refresh"></i> Generate Report
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Key Performance Indicators</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-label">Total Clients</div>
                                <div class="stat-value">@kpiData.TotalClients</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-label">Improvement Rate</div>
                                <div class="stat-value">@kpiData.ImprovementRate.ToString("P1")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-label">DNA Rate</div>
                                <div class="stat-value text-danger">@kpiData.DNARate.ToString("P1")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-label">Active Clients</div>
                                <div class="stat-value text-success">@kpiData.ActiveClients</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-label">Average Sessions</div>
                                <div class="stat-value">@kpiData.AverageSessionsPerClient.ToString("F1")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-label">Risk Flags</div>
                                <div class="stat-value text-danger">@kpiData.RiskFlagsCount</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h5>First vs Last Score (Scatter Plot)</h5>
                    <button class="btn btn-sm btn-outline-primary" @onclick="LoadScatterPlot">
                        <i class="fas fa-refresh"></i> Refresh
                    </button>
                </div>
                <div class="card-body">
                    <div class="scatter-plot-container">
                        <canvas id="scatterChart" width="600" height="400"></canvas>
                        @if (scatterData.Any())
                        {
                            <div class="mt-3">
                                <p class="text-muted">
                                    Showing @scatterData.Count clients with at least 2 sessions.
                                    Click on a point to view client details.
                                </p>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-chart-scatter fa-3x mb-3"></i>
                                <p>No data available for the selected period</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Discharge Reasons</h5>
                </div>
                <div class="card-body">
                    <canvas id="dischargeChart" width="300" height="300"></canvas>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Export Options</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-success" @onclick='() => ExportReport("Excel")'>
                            <i class="fas fa-file-excel"></i> Export to Excel
                        </button>
                        <button class="btn btn-danger" @onclick='() => ExportReport("PDF")'>
                            <i class="fas fa-file-pdf"></i> Export to PDF
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1rem;
        text-align: center;
    }
    
    .stat-label {
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }
    
    .stat-value {
        font-size: 1.75rem;
        font-weight: bold;
        color: #212529;
    }
    
    .scatter-plot-container {
        position: relative;
        min-height: 400px;
    }
</style>

