    }

    private async Task LoadScatterPlot()
    {
        // TODO: Load from API
        scatterData = new List<ScatterPoint>();
        await Task.CompletedTask;
    }

    private async Task ExportReport(string format)
    {
        // TODO: Call API to generate export
        await Task.CompletedTask;
    }

    public class ProgramDto
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = "";
    }

    public class KpiData
    {
        public int TotalClients { get; set; }
        public int ActiveClients { get; set; }
        public decimal ImprovementRate { get; set; }
        public decimal DNARate { get; set; }
        public decimal AverageSessionsPerClient { get; set; }
        public int RiskFlagsCount { get; set; }
    }

    public class ScatterPoint
    {
        public Guid ClientId { get; set; }
        public decimal FirstScore { get; set; }
        public decimal LastScore { get; set; }
    }
}
