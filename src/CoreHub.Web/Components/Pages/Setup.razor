    private void GoNext()
    {
        if (currentStep < totalSteps)
        {
            currentStep++;
        }
    }

    private void GoBack()
    {
        if (currentStep > 1)
        {
            currentStep--;
        }
    }

    private void SkipStep()
    {
        GoNext();
    }

