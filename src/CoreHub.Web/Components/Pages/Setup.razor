@page "/setup"
@inject NavigationManager Navigation
@rendermode @(new InteractiveServerRenderMode())

<div class="setup-wizard">
    <div class="setup-container">
        <!-- Progress Indicator -->
        <div class="setup-progress">
            @for (int i = 1; i <= totalSteps; i++)
            {
                <div class="progress-step @(i < currentStep ? "completed" : "") @(i == currentStep ? "active" : "")">
                    @if (i < currentStep)
                    {
                        <i class="fas fa-check"></i>
                    }
                </div>
                @if (i < totalSteps)
                {
                    <div class="progress-line @(i < currentStep ? "completed" : "")"></div>
                }
            }
        </div>

        <!-- Step Content -->
        <div class="setup-content">
            @if (currentStep == 1)
            {
                <div class="step-header">
                    <h2>Hi and welcome aboard!</h2>
                    <p>Let's get your practice set up in CoreHub</p>
                </div>
                <div class="welcome-card">
                    <div class="welcome-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <h3>Are you ready to dive into CoreHub?</h3>
                    <p>Your practice management success awaits.</p>
                </div>
            }
            else if (currentStep == 2)
            {
                <div class="step-header">
                    <h2>What type of practice do you run?</h2>
                    <p>This helps us customize your experience</p>
                </div>
                <div class="practice-types">
                    @foreach (var type in practiceTypes)
                    {
                        <div class="practice-type-card @(setupData.PracticeType == type ? "selected" : "")" 
                             @onclick="() => setupData.PracticeType = type">
                            <i class="fas @GetPracticeTypeIcon(type)"></i>
                            <span>@type</span>
                        </div>
                    }
                </div>
            }
            else if (currentStep == 3)
            {
                <div class="step-header">
                    <h2>Add your practice details</h2>
                    <p>This makes it easier for you to create automated communications for clients and referrers.</p>
                </div>
                <div class="form-section">
                    <div class="form-group">
                        <label>Practice Name</label>
                        <input type="text" class="form-control" @bind="setupData.PracticeName" placeholder="Enter practice name" />
                    </div>
                    <div class="form-group">
                        <label>Street Address</label>
                        <input type="text" class="form-control" @bind="setupData.StreetAddress" placeholder="Enter street address" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>City</label>
                                <input type="text" class="form-control" @bind="setupData.City" placeholder="City" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Postcode</label>
                                <input type="text" class="form-control" @bind="setupData.Postcode" placeholder="Postcode" />
                            </div>
                        </div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="defaultLocation" @bind="setupData.UseAsDefaultLocation" />
                        <label class="form-check-label" for="defaultLocation">Use this address as your default location</label>
                    </div>
                </div>
            }
            else if (currentStep == 4)
            {
                <div class="step-header">
                    <h2>Business Phone Number</h2>
                    <p>What phone number do clients use to contact you?</p>
                </div>
                <div class="form-section">
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="tel" class="form-control" @bind="setupData.PhoneNumber" placeholder="Enter phone number" />
                    </div>
                    <div class="info-box">
                        <i class="fas fa-info-circle"></i>
                        <p>Don't worry- we don't have a sales team so we won't be chasing you down.</p>
                    </div>
                </div>
            }
            else if (currentStep == 5)
            {
                <div class="step-header">
                    <h2>Check your practitioner name</h2>
                    <p>We created your practitioner profile. Update how your name appears.</p>
                </div>
                <div class="form-section">
                    <div class="form-group">
                        <label>Name in CoreHub</label>
                        <input type="text" class="form-control" @bind="setupData.PractitionerDisplayName" placeholder="Display name" />
                    </div>
                    <div class="form-group">
                        <label>Name on invoices and official documents</label>
                        <input type="text" class="form-control" @bind="setupData.PractitionerOfficialName" placeholder="Official name" />
                    </div>
                </div>
            }
            else if (currentStep == 6)
            {
                <div class="step-header">
                    <h2>Set Your Availability</h2>
                    <p>Set the days and times you'd like your calendar to be open for bookings. You can add overrides and personal appointments later.</p>
                </div>
                <div class="availability-section">
                    @foreach (var day in setupData.Availability)
                    {
                        <div class="availability-row">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="@day.Day" @bind="day.IsAvailable" />
                                <label class="form-check-label day-label" for="@day.Day">@day.Day.ToUpper()</label>
                            </div>
                            @if (day.IsAvailable)
                            {
                                <div class="time-inputs">
                                    <select class="form-select" @bind="day.StartTime">
                                        @for (int h = 6; h <= 20; h++)
                                        {
                                            <option value="@h:00">@h:00</option>
                                            <option value="@h:30">@h:30</option>
                                        }
                                    </select>
                                    <span>–</span>
                                    <select class="form-select" @bind="day.EndTime">
                                        @for (int h = 6; h <= 21; h++)
                                        {
                                            <option value="@h:00">@h:00</option>
                                            <option value="@h:30">@h:30</option>
                                        }
                                    </select>
                                    <button class="btn btn-link text-danger" @onclick="() => day.IsAvailable = false">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Unavailable</span>
                            }
                        </div>
                    }
                </div>
            }
            else if (currentStep == 7)
            {
                <div class="step-header">
                    <h2>Add some services</h2>
                    <p>These will make it faster for you to create appointments.</p>
                </div>
                <div class="services-section">
                    <div class="services-header">
                        <div>Service</div>
                        <div>Duration (minutes)</div>
                        <div>Price</div>
                        <div></div>
                    </div>
                    @foreach (var service in setupData.Services)
                    {
                        <div class="service-row">
                            <input type="text" class="form-control" @bind="service.Name" placeholder="Service name" />
                            <input type="number" class="form-control" @bind="service.Duration" placeholder="60" />
                            <div class="price-input">
                                <span class="currency">£</span>
                                <input type="number" class="form-control" @bind="service.Price" placeholder="0.00" step="0.01" />
                            </div>
                            <button class="btn btn-link text-danger" @onclick="() => RemoveService(service)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    }
                    <button class="btn btn-link" @onclick="AddService">
                        <i class="fas fa-plus"></i> Add Service
                    </button>
                </div>
            }
            else if (currentStep == 8)
            {
                <div class="step-header">
                    <h2>Get ready for online bookings</h2>
                    <p>Do you want your clients to be able to book online?</p>
                </div>
                <div class="options-section">
                    <div class="option-card @(setupData.AllowOnlineBookings ? "selected" : "")" 
                         @onclick="() => setupData.AllowOnlineBookings = true">
                        <i class="fas fa-check-circle"></i>
                        <span>Yes</span>
                    </div>
                    <div class="option-card @(!setupData.AllowOnlineBookings ? "selected" : "")" 
                         @onclick="() => setupData.AllowOnlineBookings = false">
                        <i class="fas fa-times-circle"></i>
                        <span>No</span>
                    </div>
                </div>
            }
            else if (currentStep == 9)
            {
                <div class="step-header">
                    <h2>Decide who can book online</h2>
                    <p>Do you want to allow new clients to book appointments online?</p>
                </div>
                <div class="options-section">
                    <div class="option-card @(setupData.AllowNewClients ? "selected" : "")" 
                         @onclick="() => setupData.AllowNewClients = true">
                        <i class="fas fa-check-circle"></i>
                        <span>Yes</span>
                    </div>
                    <div class="option-card @(!setupData.AllowNewClients ? "selected" : "")" 
                         @onclick="() => setupData.AllowNewClients = false">
                        <i class="fas fa-times-circle"></i>
                        <span>No</span>
                    </div>
                </div>
            }
            else if (currentStep == 10)
            {
                <div class="step-header">
                    <h2>Set your notice time</h2>
                    <p>How much notice time do you need for online bookings?</p>
                </div>
                <div class="form-section">
                    <div class="form-group">
                        <label>Minimum notice time</label>
                        <select class="form-select" @bind="setupData.MinimumNoticeTime">
                            <option value="1">1 hour ahead</option>
                            <option value="2">2 hours ahead</option>
                            <option value="3">3 hours ahead</option>
                            <option value="6">6 hours ahead</option>
                            <option value="12">12 hours ahead</option>
                            <option value="24">24 hours ahead</option>
                            <option value="48">2 days ahead</option>
                            <option value="72">3 days ahead</option>
                        </select>
                    </div>
                </div>
            }
            else if (currentStep == 11)
            {
                <div class="step-header">
                    <h2>Choose how to handle cancellations</h2>
                    <p>What is your cancellation policy?</p>
                </div>
                <div class="form-section">
                    <div class="form-group">
                        <label>Cancellation Policy</label>
                        <select class="form-select" @bind="setupData.CancellationPolicy">
                            <option value="none">No Cancellations Via Portal</option>
                            <option value="anytime">Anytime</option>
                            <option value="3">3 Hours Before Appointment</option>
                            <option value="6">6 Hours Before Appointment</option>
                            <option value="8">8 Hours Before Appointment</option>
                            <option value="12">12 Hours Before Appointment</option>
                            <option value="24">One Day Before Appointment</option>
                            <option value="48">Two Days Before Appointment</option>
                            <option value="72">Three Days Before Appointment</option>
                            <option value="96">Four Days Before Appointment</option>
                            <option value="168">One Week Before Appointment</option>
                        </select>
                    </div>
                </div>
            }
            else if (currentStep == 12)
            {
                <div class="step-header">
                    <h2>Check out your Online Portal!</h2>
                    <p>Great! Your Online Portal is ready to accept bookings.</p>
                </div>
                <div class="portal-info">
                    <div class="portal-card">
                        <h4>View your Client Portal</h4>
                        <a href="#" class="portal-link">https://clientportal.corehub.com/clientportal/@GeneratePortalId()</a>
                        <p class="text-muted">You can update the URL later.</p>
                    </div>
                </div>
            }
            else if (currentStep == 13)
            {
                <div class="step-header">
                    <h2>Well done!</h2>
                    <p>Your initial setup is complete. You can learn about more CoreHub features here...</p>
                </div>
                <div class="resources-grid">
                    <div class="resource-card blue">
                        <h4>Getting started with CoreHub</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                    <div class="resource-card purple">
                        <h4>Complete your CoreHub Account Setup</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                    <div class="resource-card pink">
                        <h4>Set up Reminders & Automatic Communications</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                    <div class="resource-card gray">
                        <h4>Add Session Notes</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                    <div class="resource-card orange">
                        <h4>Add Services and Products</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                    <div class="resource-card green">
                        <h4>Start with Online Forms</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                    <div class="resource-card blue-light">
                        <h4>Start with Communication Templates</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                    <div class="resource-card purple-light">
                        <h4>Set up your Client Portal</h4>
                        <div class="resource-links">
                            <a href="#">Video Guide</a>
                            <a href="#">Help Article</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Navigation Buttons -->
        <div class="setup-actions">
            @if (currentStep > 1 && currentStep < 13)
            {
                <button class="btn btn-outline-primary" @onclick="GoBack">
                    <i class="fas fa-arrow-left"></i> BACK
                </button>
            }
            else
            {
                <div></div>
            }

            <div class="right-actions">
                @if (currentStep > 1 && currentStep < 12)
                {
                    <button class="btn btn-link skip-btn" @onclick="SkipStep">SKIP FOR NOW</button>
                }
                @if (currentStep < 13)
                {
                    <button class="btn btn-primary next-btn" @onclick="GoNext">
                        NEXT <i class="fas fa-arrow-right"></i>
                    </button>
                }
                else
                {
                    <button class="btn btn-primary next-btn" @onclick="CompleteSetup">
                        DONE <i class="fas fa-check"></i>
                    </button>
                }
            </div>
        </div>
    </div>
</div>

