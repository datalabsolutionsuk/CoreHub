@page "/clients"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject Services.SetupService SetupService
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode @(new InteractiveServerRenderMode())

<PageTitle>Clients - CoreHub</PageTitle>

@if (!isAuthenticated && !SetupService.IsSetupCompleted)
{
    <!-- Empty State for New Users Only -->
    <div class="empty-state-container">
        <div class="empty-state-content">
            <div class="empty-state-icon">
                <i class="fas fa-users"></i>
            </div>
            <h2>No Clients Yet</h2>
            <p>Complete your setup first, then you can start adding clients to your practice.</p>
            <button class="btn btn-primary btn-lg" @onclick="GoToSetup">
                <i class="fas fa-rocket me-2"></i> Complete Setup
            </button>
        </div>
    </div>
}
else
{
<div class="clients-container">
    <div class="clients-header">
        <div>
            <h1 class="clients-title">Clients</h1>
            <p class="clients-subtitle">Manage your client records and information</p>
        </div>
        <button class="btn btn-primary" @onclick="ShowAddClient">
            <i class="fas fa-plus me-1"></i> Add Client
        </button>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search..." @bind="searchTerm" />
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="statusFilter">
                        <option value="">All Status</option>
                        <option value="1">Open</option>
                        <option value="2">Closed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="flagFilter">
                        <option value="">All Flags</option>
                        <option value="true">Has Flags</option>
                        <option value="false">No Flags</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100" @onclick="Search">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Client Code</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Practitioner</th>
                        <th>Status</th>
                        <th>DQ Score</th>
                        <th>Flags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (clients.Any())
                    {
                        @for (int index = 0; index < clients.Count; index++)
                        {
                            var client = clients[index];
                            var rowNumber = index + 1;
                            <tr>
                                <td class="text-muted">@rowNumber</td>
                                <td>@client.ClientCode</td>
                                <td>@client.FullName</td>
                                <td>@client.DateOfBirth.ToShortDateString()</td>
                                <td>@client.AssignedPractitionerName</td>
                                <td>
                                    <span class="badge bg-@(client.Status == 1 ? "success" : "secondary")">
                                        @GetStatusText(client.Status)
                                    </span>
                                </td>
                                <td>
                                    <div class="dq-thermometer">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <span class="dq-segment @(i <= (int)client.DataQualityScore ? "filled" : "")"></span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (client.ActiveFlags.Any())
                                    {
                                        <button class="btn btn-sm btn-danger" @onclick="() => ViewFlags(client.Id)">
                                            <i class="fas fa-flag"></i> @client.ActiveFlags.Count
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => ViewClient(client.Id)">
                                        <i class="fas fa-eye"></i> View
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">No clients found</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
}

