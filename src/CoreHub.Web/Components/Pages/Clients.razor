@page "/clients"

<PageTitle>Clients - CoreHub</PageTitle>

<div class="clients-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Clients</h1>
        <button class="btn btn-primary" @onclick="ShowAddClient">
            <i class="fas fa-plus"></i> Add Client
        </button>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search..." @bind="searchTerm" />
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="statusFilter">
                        <option value="">All Status</option>
                        <option value="1">Open</option>
                        <option value="2">Closed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="flagFilter">
                        <option value="">All Flags</option>
                        <option value="true">Has Flags</option>
                        <option value="false">No Flags</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100" @onclick="Search">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Client Code</th>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Practitioner</th>
                        <th>Status</th>
                        <th>DQ Score</th>
                        <th>Flags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (clients.Any())
                    {
                        @foreach (var client in clients)
                        {
                            <tr>
                                <td>@client.ClientCode</td>
                                <td>@client.FullName</td>
                                <td>@client.DateOfBirth.ToShortDateString()</td>
                                <td>@client.AssignedPractitionerName</td>
                                <td>
                                    <span class="badge bg-@(client.Status == 1 ? "success" : "secondary")">
                                        @client.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="dq-thermometer">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <span class="dq-segment @(i <= (int)client.DataQualityScore ? "filled" : "")"></span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (client.ActiveFlags.Any())
                                    {
                                        <span class="badge bg-danger">@client.ActiveFlags.Count</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => ViewClient(client.Id)">
                                        View
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No clients found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .dq-thermometer {
        display: flex;
        gap: 2px;
    }
    
    .dq-segment {
        width: 12px;
        height: 20px;
        border: 1px solid #ddd;
        background-color: #f8f9fa;
    }
    
    .dq-segment.filled {
        background-color: #28a745;
    }
</style>

