@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-bar">
            <div class="top-bar-content">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search clients, appointments..." />
                </div>
                <div class="top-bar-actions">
                    <button class="icon-button" title="Notifications">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                    <button class="icon-button" title="Settings">
                        <i class="fas fa-cog"></i>
                    </button>
                </div>
            </div>
        </div>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
        background: #f8fafc;
    }

    .page {
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    .sidebar {
        width: 260px;
        flex-shrink: 0;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .top-bar {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 1rem 2rem;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .top-bar-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1400px;
    }

    .search-box {
        position: relative;
        width: 400px;
    }

    .search-box i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        font-size: 0.875rem;
    }

    .search-box input {
        width: 100%;
        padding: 0.625rem 1rem 0.625rem 2.75rem;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.875rem;
        transition: all 0.2s;
        background: #f8fafc;
        color: #1e293b;
    }

    .search-box input::placeholder {
        color: #94a3b8;
    }

    .search-box input:focus {
        outline: none;
        border-color: #3b82f6;
        background: white;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .top-bar-actions {
        display: flex;
        gap: 0.5rem;
    }

    .icon-button {
        position: relative;
        width: 40px;
        height: 40px;
        border: none;
        background: #f8fafc;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        color: #64748b;
    }

    .icon-button:hover {
        background: #e2e8f0;
        color: #1e293b;
    }

    .notification-badge {
        position: absolute;
        top: -4px;
        right: -4px;
        background: #ef4444;
        color: white;
        font-size: 0.625rem;
        font-weight: 600;
        padding: 0.125rem 0.375rem;
        border-radius: 10px;
        min-width: 18px;
        text-align: center;
    }

    .content {
        flex: 1;
        overflow-y: auto;
        background: #f8fafc;
    }

    @@media (max-width: 1024px) {
        main {
            margin-left: 0;
        }

        .sidebar {
            position: fixed;
            left: -260px;
            transition: left 0.3s;
            z-index: 100;
        }

        .search-box {
            width: 300px;
        }
    }

    @@media (max-width: 640px) {
        .top-bar {
            padding: 0.75rem 1rem;
        }

        .search-box {
            width: 200px;
        }

        .search-box input {
            font-size: 0.813rem;
            padding: 0.5rem 1rem 0.5rem 2.5rem;
        }
    }
</style>

